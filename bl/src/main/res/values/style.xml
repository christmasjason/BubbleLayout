<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BubbleLayout">
        <attr name="arrowWidth" format="dimension|reference" />
        <attr name="cornersRadius" format="dimension|reference" />
        <attr name="arrowHeight" format="dimension|reference" />
        <attr name="arrowPosition" format="dimension|reference" />
        <attr name="bubbleColor" format="color|reference" />
        <attr name="strokeWidth" format="dimension|reference" />
        <attr name="strokeColor" format="color|reference" />

        <attr name="arrowDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>
</resources>